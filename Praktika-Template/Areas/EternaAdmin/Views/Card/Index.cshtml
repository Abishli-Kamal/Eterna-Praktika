@model List<Card>
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3"> 
    <a asp-controller="Card" asp-action="Create" style="color:white;font-size:20px" class="mb-3 mx-2 btn btn-success">Create Card</a>


<table class="table table-dark mt-5">
    <thead>
        <tr>
            
            <th scope="col">Name</th>
            <th scope="col">Infos</th>
            <th scope="col">Icon</th>
            <th scope="col">Edit</th>
            <th scope="col">Detail</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">

        @foreach (Card card in Model)
        {
            <tr>
                
                <td>@card.Title</td>
                <td style="width:400px;">@card.Description</td>
                <td>
                   <i style="font-size:20px; " class="@card.Icon"> </i> 
                    
                </td>
                <td> 
                    <div>
                         <a asp-controller="Card" asp-action="Edit" asp-route-id="@card.Id" class="btn btn-danger"><i class="fa-solid fa-user-pen"></i></a>
                    </div>
                </td>
                <td>
                    <div>
                         <a asp-controller="Card" asp-action="Detail" asp-route-id="@card.Id" class="btn btn-danger">
                                   <i class="fa-solid fa-circle-info"></i> </a>
                    </div>
                </td>
                <td>
                    <div>
                         <a asp-controller="Card" asp-action="Delete" asp-route-id="@card.Id" class="btn btn-danger"> <i class="fa-solid fa-person-circle-minus"></i></a>
                    </div>
                </td>
            </tr>
        }


    </tbody>
</table>
</div>

