@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="mt-5">
    <div class="mt-5 mx-5">
        <h2 style="color:red; font-size:18px;" >Title:  @Model.Title</h2>
      
    </div>
    <div class="mt-5 mx-5">
         <h2 style="color:blue; font-size:18px;">SubTitle:   @Model.Description </h2>
       
    </div>
    <div class="mt-5 mx-5">
     <label class="mb-2" >Image:</label>
     <img class="mx-5" style="width:300px; height:180px" src="~/assets/img/@Model.Image"/>
   </div>
</div>

