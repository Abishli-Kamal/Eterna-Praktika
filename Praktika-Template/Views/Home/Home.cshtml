@using Praktika_Template.Models
@using Praktika_Template.ViewModels
@model HomeVM
@{
    ViewData["Title"] = "Home";
}
  <main>
        <section id="slider">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active "
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner ">
                    <div class="carousel-item active">
                        <img src="~/assets/img/@layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="Image").Value" class="d-block w-100" alt="...">
                        <div class="carousel-caption  d-md-block info">
                            <h2>@layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="Title").Value</span></h2>
                            <p>@layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="Infos").Value</p>
                            <button class="btn btn-danger rounded-pill">Read More</button>
                        </div>
                    </div>
                    @foreach (Slider slider in Model.Sliders)
                   {
                    <div class="carousel-item">
                        <img src="~/assets/img/@slider.Image" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-md-block info">
                            <h2>@slider.Title</h2>
                            <p>@slider.Description</p>
                            <button class="btn btn-danger rounded-pill ">Read More</button>
                        </div>
                    </div>   
                   }
                    
                 
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>


        </section>
        <section id="card-one">
            <div class="container">
                <div class="row">
                   @foreach (Card card in Model.Cards)
                  {
                       <div class="col-lg-4 box rounded ">
                        <div class="icon">
                            <i class="@card.Icon"></i>
                        </div>
                        <div class="name">
                            <h4>@card.Title</h4>
                        </div>
                        <div class="info">
                         @card.Description
                        </div>

                    </div>
                  }
                   

                </div>
            </div>
        </section>
        <section id="about">
            <div class="container">
                <div class="row">
                    <div class="img col-lg-6">
                        <img src="~/assets/img/@Model.Abouts.Image" alt="">
                    </div>
                    <div class="description col-lg-6">
                        <h4>@Model.Abouts.Title</h4>
                        <p> <i>@Model.Abouts.Description</i>

                        </p>
                       @foreach (AboutInfo item in Model.AboutInfos)
                      {
                           <div class="icon d-flex">
                            <i class="@item.Icon px-2 mt-1  text-danger"></i>
                            <p>@item.Info</p>
                        </div>
                      }
                      
                        <div class="infos">
                           @Model.Abouts.Info
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <section id="cardsection">
            <div class="container">
                <div class="row">
                  @foreach (HomeCard card in Model.HomeCards)
                 {
                      <div class="col-lg-4 services col-md-6 col-sm-12">
                        <div class="icon">
                            <i class="@card.Icon"></i>
                        </div>
                        <h2>@card.Name</h2>
                        <p>@card.Infos</p>
                    </div>
                 }
                   
 
                </div>
            </div>
        </section>
        <section id="client">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="name">
                            <h3>@Model.Clients.Name
                                <div class="box d-flex justify-content-center">
                                    <hr>
                                </div>

                        </div>
                        <div class="info">
                            <p>@Model.Clients.Description</p>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <section id="clients">
            <div class="container">
                <div class="row">
                    <div class="owl-carousel owl-theme">
                        @foreach (ClientImage img in Model.ClientImages)
                       {
                          <div class="item col-lg-12 col-md-3 col-sm-6 ">
                            <img src="~/assets/img/@img.Image" alt="">
                        </div> 
                       }
                        
                      
                    </div>
                </div>
            </div>
        </section>


    </main>

